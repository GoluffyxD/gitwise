{
  "name": "gitwise",
  "displayName": "Gitwise",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gitwise-sidebar-view",
          "title": "Gitwise",
          "icon": "media/custom.svg"
        }
      ]
    },
    "views": {
      "gitwise-sidebar-view": [
        {
          "type": "webview",
          "id": "gitwise-sidebar",
          "name": "Gitwise",
          "icon": "media/custom.svg",
          "contextualTitle": "Gitwise"
        }
      ]
    },
    "commands": [
      {
        "command": "gitwise.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "gitwise.explain",
        "category": "Gitwise",
        "title": "Explain"
      },
      {
        "command": "gitwise.refresh",
        "category": "Gitwise",
        "title": "Refresh"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "concurrently \"rollup -c -w --bundleConfigAsCjs\" \"webpack --watch\"",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@tsconfig/svelte": "^5.0.4",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/prismjs": "^1.26.4",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "rollup": "^2.3.4",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^4.2.17",
    "svelte-check": "^3.7.1",
    "svelte-highlight": "^7.6.1",
    "svelte-preprocess": "^5.1.4",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
